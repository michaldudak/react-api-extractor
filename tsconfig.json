{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"target": "ES2022",
		"moduleResolution": "node16",
		"module": "node16",
		"jsx": "react-jsx",

		"strict": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,

		"esModuleInterop": true,
		"isolatedModules": true
	},
	"include": ["./src/**/*"]
}
